<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.testv3.MainActivity">

    <EditText
        android:id="@+id/et_email_authent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <EditText
        android:id="@+id/et_password_authent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button
        android:text="Войти"
        android:id="@+id/sign_in_authent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button
        android:text="перейти к регистрации"
        android:id="@+id/go_registration_authent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <Button
        android:text="Востановите пароль"
        android:id="@+id/but_go_recovery_password"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />


</LinearLayout>
